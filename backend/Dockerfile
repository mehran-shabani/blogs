# Dockerfile for Backend (FastAPI)
FROM python:3.11-slim

# ????? working directory
WORKDIR /app

# ??? ??????????? ??????
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ??? ???????? requirements
COPY requirements.txt .

# ??? ??????????? Python
RUN pip install --no-cache-dir -r requirements.txt

# ??? ?? ??????
COPY . .

# Expose port
EXPOSE 8000

# ????? ????
CMD ["python", "main.py"]
